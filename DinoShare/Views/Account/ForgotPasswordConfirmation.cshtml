@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
    <div class="cls-content">
        <div class="cls-content-sm panel">
            <div class="panel-body">
                <div class="mar-ver pad-btm">
                    <h1 class="h3">Forgot Password</h1>
                    <p>Confirmation</p>
                </div>
                @Html.AntiForgeryToken()
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert-danger">
                        <p>
                            @ViewBag.Error
                        </p>
                    </div>
                }
            <div class="pad-all">
                A password reset link have been emailed to you. Please click this link in order to reset your password.<br /><br />
                Please also look in your spam/junk folder in case your service provider is blocking the emails.
            </div>
            </div>

            <div class="pad-all">
                <a href="/Account/Login" class="btn-link mar-rgt">Back to login</a>
                @*<a href="/Account/Register" class="btn-link mar-lft">Create a new account</a>*@
            </div>
        </div>
    </div>